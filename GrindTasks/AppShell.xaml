<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="GrindTasks.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:GrindTasks" x:DataType="local:MainPage"
    Shell.FlyoutBehavior="Flyout"
    Shell.BackgroundColor="#21a5be">



    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems">
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

        <ShellContent
        Title="Calendar"
        Route="Calendar" ContentTemplate="{DataTemplate local:ViewModel.Calendar}" />

    </FlyoutItem>


</Shell>

